<% categories.each do |category, tags| %>
  <h2><%= category %></h2>
  <div id="content">
    <% tags.each do |tag| %>
      <div class="card">
        <div class="viewer">
          <style><%= tag[:style] %></style>
          <div class="<%= tag[:name] %>">
            <img src="<%= tag[:tag] %>" alt="<%= tag[:name] %>"/>
          </div>
        </div>
        <div class="info">
          <p><%= tag[:name] %></p>
          <button class="copy-snippet-button">Copy Snippet</button>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
