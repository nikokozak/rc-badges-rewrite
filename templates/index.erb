<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="main.css">
  </head>
  <body>
    <header>
      <div>
        <img id="site-logo" src="logo.png" />
        <h1><strong>RC</strong> TAGS</h1>
        <h3><strong>Recurse Center</strong> bling for your awesome projects!</h3>

        <div class="tags">
          <p>#RC</p>
          <p>#SWAG</p>
          <p>#WOW</p>
        </div>

        <div class="tags">
        </div>
      </div>
    </header>
    <div id="content">
      <%= render_internal "_categories.erb", {tags: tags} %>   
    </div>
  </body>

<script>
  const tag_cards = document.querySelectorAll(".card");

  console.log(tag_cards)
  for (const tag_card of tag_cards) {
      const to_copy = tag_card.querySelector("textarea");
      const button = tag_card.querySelector("button");
      button.addEventListener('click', function(e) {
        to_copy.style.display = "block"
        to_copy.select()
        try {
          return document.execCommand("copy");
        } catch (ex) {
          console.warn("copy to clipboard failed")
          return false;
        } finally {
          to_copy.style.display = "none"
        }
      })
  }
</script>
</html>
